{
	"version": "0.2.0",
	"configurations": [
	  {
		"name": "Debug Program",
		"type": "cppdbg",
		"request": "launch",
		"program": "${workspaceFolder}/pipex",  // Update this path accordingly
		"args": ["here_doc", "LIMITER", "cat", "cat", "outfile"],
		"stopAtEntry": false,
		"cwd": "${workspaceFolder}",
		"environment": [],
		"externalConsole": false,
		"MIMode": "gdb",
		"setupCommands": [
		  {
			"description": "Enable pretty-printing for gdb",
			"text": "-enable-pretty-printing",
			"ignoreFailures": true
		  }
		],
		"preLaunchTask": "build"  // Specify the name of your build task
	  }
	]
  }
  